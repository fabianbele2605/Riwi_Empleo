# =================================
# CONFIGURACIÓN DE BASE DE DATOS
# =================================

# Host de la base de datos PostgreSQL
DB_HOST=localhost

# Puerto de la base de datos
DB_PORT=5432

# Nombre de usuario de la base de datos
DB_USERNAME=postgres

# Contraseña de la base de datos
DB_PASSWORD=postgres

# Nombre de la base de datos
DB_DATABASE=empleo_db

# =================================
# CONFIGURACIÓN JWT
# =================================

# Clave secreta para firmar los tokens JWT
# IMPORTANTE: Cambiar por una clave segura en producción
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion

# Tiempo de expiración de los tokens JWT
JWT_EXPIRES_IN=7d

# =================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =================================

# Puerto donde correrá la aplicación
APP_PORT=3000

# URL del frontend para configurar CORS
FRONTEND_URL=http://localhost:3001

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# =================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================

# API Key para seguridad adicional
# IMPORTANTE: Cambiar por una clave única en producción
API_KEY=riwi_api_key_2024_empleo_vacantes

# =================================
# CONFIGURACIÓN DE LOGGING
# =================================

# Nivel de logging (error, warn, info, debug, verbose)
LOG_LEVEL=debug

# =================================
# CONFIGURACIÓN DE COOKIES
# =================================

# Dominio para las cookies (opcional)
COOKIE_DOMAIN=localhost

# Configuración segura de cookies en producción
COOKIE_SECURE=false

# =================================
# CONFIGURACIÓN DE CORS
# =================================

# Orígenes permitidos para CORS (separados por coma)
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# =================================
# CONFIGURACIÓN DE RATE LIMITING
# =================================

# Límite de peticiones por minuto (opcional)
RATE_LIMIT_MAX=100

# Ventana de tiempo para rate limiting en minutos
RATE_LIMIT_WINDOW=1

# =================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# =================================

# Configuración SMTP para envío de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion

# =================================
# CONFIGURACIÓN DE ARCHIVOS (OPCIONAL)
# =================================

# Tamaño máximo de archivos en MB
MAX_FILE_SIZE=5

# Directorio para almacenar archivos subidos
UPLOAD_DIR=./uploads

# =================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# =================================

# URL de conexión a Redis para cache
REDIS_URL=redis://localhost:6379

# =================================
# CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# =================================

# URL de Sentry para monitoreo de errores
SENTRY_DSN=https://tu_sentry_dsn_aqui

# =================================
# NOTAS IMPORTANTES
# =================================

# 1. Copiar este archivo como .env: cp .env.example .env
# 2. Cambiar todas las claves secretas en producción
# 3. No commitear el archivo .env al repositorio
# 4. Usar variables de entorno del sistema en producción
# 5. Verificar que Docker esté corriendo para la base de datos